@model mascota.Models.Mascota
@{ 
    ViewData["Title"] = "Registrar Nueva Mascota";
}

<h2>@ViewData["Title"]</h2> 

<hr /> 

<div class="row"> 
    <div class="col-md-6"> 

        <form asp-action="Registrar" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label> 
                <input asp-for="Nombre" class="form-control" /> 
                <span asp-validation-for="Nombre" class="text-danger"></span> 
            </div>

            <div class="mb-3">
                <label asp-for="Edad" class="form-label"></label>
                <input asp-for="Edad" type="number" min="0" class="form-control" />
                <span asp-validation-for="Edad" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Tipo" class="form-label">Tipo</label> 
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Estado" class="form-label">Estado de Adopci√≥n</label>
                <select asp-for="Estado" class="form-select">
                    <option value="">-- Seleccione Estado --</option>
                    <option value="Disponible">Disponible</option>
                    <option value="Adoptada">Adoptada</option> 
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="mb-3"> 
                <button type="submit" class="btn btn-primary">Registrar Mascota</button>
            </div>
        </form>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["Message"]
            </div>
        }

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}